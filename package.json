{
  "name": "venus-acm",
  "version": "1.1.11",
  "author": "lemon-clown",
  "description": "build cpp codes into single sources file.",
  "bin": {
    "venus": "target/main.js"
  },
  "scripts": {
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "ts-node -r tsconfig-paths/register script/build.ts",
    "clean": "yarn",
    "format": "run-s format:lint:fix format:prettier",
    "format:lint:fix": "eslint . --fix",
    "format:prettier": "prettier --write .",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "test": "echo 'no tests yet'",
    "update:lock": "yarn-deduplicate"
  },
  "main": "target/main.js",
  "repository": "git@github.com:lemon-clown/venus.git",
  "keywords": [
    "typescript",
    "cli",
    "acm"
  ],
  "license": "MIT",
  "dependencies": {
    "@types/js-yaml": "^3.11.2",
    "@types/lodash": "^4.14.116",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^10.9.4",
    "colorful-chalk-logger": "^0.3.2",
    "fs-extra": "^10.0.0",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.14",
    "mini-copy": "^0.1.3",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@guanghechen/eslint-config": "^1.5.0",
    "@guanghechen/eslint-config-ts": "^1.5.0",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "26.0.23",
    "@types/ora": "^1.3.4",
    "@types/webpack": "^4.4.11",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.5.2",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "6.0.0",
    "is-ci": "3.0.0",
    "jest": "26.6.3",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "ora": "^3.0.0",
    "prettier": "2.3.0",
    "ts-loader": "^5.1.1",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.4",
    "yarn-deduplicate": "3.1.0",
    "webpack": "^4.19.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
