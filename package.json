{
  "name": "@guanghechen/venus",
  "version": "1.1.11",
  "description": "Merge cpp codes into single sources file.",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:guanghechen/venus.git"
  },
  "homepage": "https://github.com/guanghechen/venus#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "lerna run --concurrency 1 build",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lint:fix format:prettier",
    "format:lint:fix": "eslint . --fix",
    "format:prettier": "prettier --write .",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "yarn clean && yarn build",
    "test": "lerna exec --concurrency 1 'npm run test --if-present'",
    "test:update": "lerna run test --concurrency 1 -- -u",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@guanghechen/eslint-config": "^1.7.1",
    "@guanghechen/eslint-config-jsx": "^1.7.1",
    "@guanghechen/eslint-config-ts": "^1.7.1",
    "@guanghechen/jest-config": "^1.7.1",
    "@guanghechen/jest-helper": "^1.7.1",
    "@guanghechen/rollup-config-cli": "^1.7.1",
    "@types/fs-extra": "^9.0.12",
    "@types/inquirer": "^7.3.3",
    "@types/jest": "26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/minimatch": "^3.0.5",
    "cross-env": "7.0.3",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "fs-extra": "^10.0.0",
    "gitmoji-changelog": "^2.2.1",
    "husky": "7.0.1",
    "is-ci": "3.0.0",
    "jest": "27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "11.0.1",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "rollup": "2.53.2",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5",
    "yarn-deduplicate": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
