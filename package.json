{
  "name": "venus-acm",
  "version": "1.1.11",
  "description": "Merge cpp codes into single sources file.",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:guanghechen/venus.git"
  },
  "homepage": "https://github.com/guanghechen/venus#readme",
  "keywords": [
    "typescript",
    "cli",
    "acm",
    "single cpp file tool"
  ],
  "main": "lib/cjs/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "venus": "target/main.js"
  },
  "scripts": {
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "clean": "yarn",
    "format": "run-s format:lint:fix format:prettier",
    "format:lint:fix": "eslint . --fix",
    "format:prettier": "prettier --write .",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "test": "echo 'no tests yet'",
    "update:lock": "yarn-deduplicate"
  },
  "dependencies": {
    "@barusu/chalk-logger": "^0.2.0",
    "@barusu/util-cli": "^0.2.0",
    "@guanghechen/locate-helper": "^1.5.1",
    "@guanghechen/option-helper": "^1.5.1",
    "chalk": "^4.1.1",
    "clipboardy": "^2.3.0",
    "commander": "^7.2.0",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.1.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@guanghechen/eslint-config": "^1.5.1",
    "@guanghechen/eslint-config-ts": "^1.5.1",
    "@guanghechen/rollup-config-cli": "^1.5.1",
    "@types/fs-extra": "^9.0.11",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/minimatch": "^3.0.4",
    "cross-env": "7.0.3",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "6.0.0",
    "is-ci": "3.0.0",
    "jest": "26.6.3",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.3.0",
    "rollup": "2.48.0",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.4",
    "yarn-deduplicate": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
