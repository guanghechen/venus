{
  "name": "@guanghechen/venus",
  "version": "0.0.0",
  "private": true,
  "description": "Merge cpp codes into single sources file.",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:guanghechen/venus.git"
  },
  "homepage": "https://github.com/guanghechen/venus#readme",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test:coverage && lerna publish",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    "build": "lerna run --concurrency 1 build",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:lintfix": "eslint . --fix",
    "format:prettier": "prettier --write .",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:dev",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "yarn clean && yarn build",
    "test": "lerna run test --concurrency 1",
    "test:coverage": "lerna run --concurrency 1 test -- --coverage",
    "test:update": "lerna run --concurrency 1 test -- -u",
    "update:changelog": "gitmoji-changelog update",
    "version": "yarn && git stage yarn.lock"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@guanghechen/eslint-config": "^3.0.2",
    "@guanghechen/eslint-config-jsx": "^3.0.2",
    "@guanghechen/eslint-config-ts": "^3.0.2",
    "@guanghechen/helper-jest": "^3.0.2",
    "@guanghechen/jest-config": "^3.0.2",
    "@guanghechen/rollup-config-cli": "^3.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "29.2.5",
    "@types/js-yaml": "^4.0.5",
    "@types/minimatch": "^5.1.2",
    "cross-env": "^7.0.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "^11.1.0",
    "gitmoji-changelog": "^2.3.0",
    "husky": "8.0.3",
    "import-meta-resolve": "^2.2.1",
    "is-ci": "3.0.1",
    "jest": "29.3.1",
    "lerna": "^6.4.1",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.8.3",
    "rimraf": "^4.0.4",
    "rollup": "3.10.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
